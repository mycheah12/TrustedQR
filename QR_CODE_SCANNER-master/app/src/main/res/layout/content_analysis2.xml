<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- Top section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="100dp"
            android:stretchColumns="*">

            <TableRow
                android:paddingLeft="35dp">

                <ImageView
                    android:id="@+id/recImage"
                    android:layout_width="40dp"
                    android:layout_height="80dp"
                    android:layout_gravity="right|center"
                    android:src="@drawable/danger"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/recText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text="Mallicious Link"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:visibility="invisible"
                    tools:ignore="HardcodedText"
                    />


            </TableRow>

        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*">
            <TableRow>
                <TextView
                    android:text="Extracting url"
                    android:id="@+id/Result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/finalURLT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="5dp"
                    android:text="final url:"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.254" />

                <TextView
                    android:id="@+id/finalURLR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="15dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="5dp"
                    android:text="..."
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.254" />
            </TableRow>
        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="50dp"
            android:stretchColumns="*">

            <TableRow>

                <ImageView
                    android:id="@+id/tick"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src = "@drawable/untick1"
                    android:visibility="invisible"
                    android:paddingLeft="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:paddingTop="7dp"
                    android:text="criteria"
                    android:textSize="15sp" />

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:visibility="invisible"
                    android:layout_marginBottom="1dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:paddingTop="7dp"
                    android:text="Result"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:paddingTop="7dp"
                    android:text="Score"/>


            </TableRow>


            <TableRow>

                <ImageView
                    android:id="@+id/tick1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src = "@drawable/untick1"
                    android:visibility="visible"
                    android:paddingLeft="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="5sp"
                    android:paddingTop="7dp"
                    android:text="X-header content"
                    android:textSize="15sp" />

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/contentInfo"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="1dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon4"/>

                <TextView
                    android:id="@+id/contentType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.3"
                    android:paddingTop="7dp"
                    android:text="Analysing"/>

                <TextView
                    android:id="@+id/contentTypeScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.5"

                    android:paddingTop="7dp"
                    android:text="Score"/>


            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/tick2"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src = "@drawable/untick1"
                    android:visibility="visible"
                    android:paddingLeft="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="5sp"
                    android:paddingTop="7dp"
                    android:text="X-frame option"
                    android:textSize="15sp" />

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/frameInfo"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="1dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon4"/>

                <TextView
                    android:id="@+id/frameType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.3"
                    android:paddingTop="7dp"
                    android:text="Analysing"/>

                <TextView
                    android:id="@+id/frameScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:paddingTop="7dp"
                    android:text="Score"/>
            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/tick3"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src = "@drawable/untick1"
                    android:visibility="visible"
                    android:paddingLeft="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="5sp"
                    android:paddingTop="7dp"
                    android:text="content security policy"
                    android:textSize="15sp" />

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/policyInfo"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="1dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon4"/>

                <TextView
                    android:id="@+id/policyType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.3"
                    android:paddingTop="7dp"
                    android:text="Analysing"/>

                <TextView
                    android:id="@+id/policyScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:paddingTop="7dp"
                    android:text="Score"/>
            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/tick4"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src = "@drawable/untick1"
                    android:visibility="visible"
                    android:paddingLeft="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="5sp"
                    android:paddingTop="7dp"
                    android:text="X-XXS security"
                    android:textSize="15sp" />

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/xssInfo"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="1dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon4"/>

                <TextView
                    android:id="@+id/xxsType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.3"
                    android:paddingTop="7dp"
                    android:text="Analysing"/>

                <TextView
                    android:id="@+id/xxsScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:paddingTop="7dp"
                    android:text="Score"/>
            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/tick5"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src = "@drawable/untick1"
                    android:visibility="visible"
                    android:paddingLeft="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="5sp"
                    android:paddingTop="7dp"
                    android:text="Strict Transport Security"
                    android:textSize="15sp" />

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/transportInfo"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="1dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon4"/>

                <TextView
                    android:id="@+id/transportType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.3"
                    android:paddingTop="7dp"
                    android:text="Analysing"/>

                <TextView
                    android:id="@+id/transportScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:paddingTop="7dp"
                    android:text="Score"/>
            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/tickD"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src = "@drawable/untick1"
                    android:visibility="visible"
                    android:paddingLeft="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="5sp"
                    android:paddingTop="7dp"
                    android:text="Download Files?"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"/>

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/downInfo"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="1dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon4"/>

                <TextView
                    android:id="@+id/downR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.3"
                    android:paddingTop="7dp"
                    android:text="Analysing"/>

                <TextView
                    android:id="@+id/downScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:paddingTop="7dp"
                    />
            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/tickC"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src = "@drawable/untick1"
                    android:visibility="visible"
                    android:paddingLeft="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="5sp"
                    android:paddingTop="7dp"
                    android:text="Blacklisted Domains?"
                    android:textSize="15sp" />

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/blackInfo"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="1dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon4"/>

                <TextView
                    android:id="@+id/blackR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.3"
                    android:paddingTop="7dp"
                    android:text="Analysing"/>

                <TextView
                    android:id="@+id/blackScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:paddingTop="7dp"
                    />
            </TableRow>


            <!-- More rows here... -->


            <TableRow>

                <ImageView

                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src = "@drawable/untick1"
                    android:visibility="invisible"
                    android:paddingLeft="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="5sp"
                    android:paddingTop="7dp"
                    android:text="Safety Score"
                    android:textSize="15sp" />

                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="1dp"
                    android:visibility="invisible"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:paddingTop="7dp"
                    android:text="" />

                <TextView
                    android:id="@+id/scoreR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:paddingTop="7dp"
                    android:text="Score"/>
            </TableRow>

        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Bottom section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">

        <Button
            android:id="@+id/scanNextButton"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Scan Next"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/websiteButton" />

        <Button
            android:id="@+id/websiteButton"
            android:layout_width="190dp"
            android:layout_height="49dp"
            android:text="Go to Website"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/scanNextButton"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>